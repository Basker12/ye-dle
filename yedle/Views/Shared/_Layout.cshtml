<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/yedle.styles.css" asp-append-version="true"/>
    
    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/3a79eafc68.js" crossorigin="anonymous"></script>
    <!-- Font Awesome -->
</head>

<body class="defaultTheme">
<header>
    <nav>
        <span><i class="fa-solid fa-circle-question fa-xl iconPresets iconLeft"></i></span>
        <span><i class="fa-brands fa-github-alt fa-xl iconPresets iconLeft"></i></span>
        
        <h1 class="header">yedle</h1>
        
        <span><i class="fa-solid fa-chart-simple fa-xl iconPresets iconRight"></i></span>
        <span><i class="fa-solid fa-gear fa-xl iconPresets iconRight"></i></span>
    </nav>
</header>
<main role="main" class="pb-3">
    @RenderBody()
</main>


